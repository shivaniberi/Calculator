using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Task1Add
{

    class AbstractClass
    {

        public static void Sum(int a)
        {

            Console.WriteLine(a);
            Console.ReadLine();
        }

        public static void Sum(params int[] a) //params keyword used for multiple parameters
        {
            int sum = 0;
            foreach (var num1 in a)
            {
                sum = sum + num1;
            }
            Console.WriteLine(sum);
            Console.ReadLine();

        }

    }
    class Program : AbstractClass
    {
        static void Main(string[] args)
         {
            
            for (int i=0;i<args.Length;i++)
            {
                string argument = args[i];

                if (argument == "sum")
                {
                    if (args.Length == 1 || args[i].Contains(' '))
                    {
                        Sum(0);
                    }

                    if (args.Length >= 2 )
                    {
                        string argument1 = args[1];
                        if (!argument1.Contains(',') && !argument1.Contains(' '))
                        {
                            int m = int.Parse(argument1);
                            Sum(m);
                            
                        }
                        else if (argument1.Contains(','))
                        {
                            string[] numberlist = argument1.Split(',');
                            int[] ints=  Array.ConvertAll(numberlist, s => int.TryParse(s, out var x) ? x : -1);
                            Sum(ints);
                        }
                        break;
                    }
                
                }
            }
     
         }
       
        }
    }

